{
  "name": "nexforce",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./public/assets/css/main.css --minify",
    "watch:css": "tailwindcss -i ./src/tailwind.css -o ./public/assets/css/main.css --watch",
    "start": "node ./server/index.js",
    "serve": "node ./server/index.js",
    "serve:static": "cd public && python3 -m http.server 5500"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17"
  }
}
